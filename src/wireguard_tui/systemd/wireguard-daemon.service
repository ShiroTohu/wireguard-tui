[Unit]
Description=Wireguard Daemon

[Service]
ExecStart=/usr/local/bin/wireguard-daemon
Restart=on-failure
Environment=PYTHONUNBUFFERED=1

User=wireguard-daemon
Group=wireguard-daemon

CapabilityBoundingSet=CAP_NET_ADMIN CAP_NET_BIND_SERVICE CAP_DAC_READ_SEARCH
AmbientCapabilities=CAP_NET_ADMIN CAP_NET_BIND_SERVICE CAP_DAC_READ_SEARCH
NoNewPriviledges=true
Type=simple

ProtectSystem=full
ReadOnlyPaths=/etc /usr /bin /lib

[Install]
WantedBy=multi-user.target
